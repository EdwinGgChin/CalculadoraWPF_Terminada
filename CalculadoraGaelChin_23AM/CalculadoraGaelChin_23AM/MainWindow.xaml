<Window x:Class="CalculadoraGaelChin_23AM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CalculadoraGaelChin_23AM"
        mc:Ignorable="d"
        Title="Calculadora" Height="400" Width="296">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="Background" Value="Gray" />
            <EventSetter Event="Click" Handler="ButtonClick"/>
            <Setter Property="FontFamily" Value="Arial Black"/>
        </Style>

    </Window.Resources>
    <Grid Margin="0,0,-2,0" Background="Black">
        <Grid.RowDefinitions>
            <RowDefinition Height="373*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>



        <Button 
            x:Name="BtSiete"
            Content="7" 
            HorizontalAlignment="Left" 
            Height="50" 
            Margin="29,99,0,0" 
            VerticalAlignment="Top" 
            Width="49" 
            Foreground="White" 
            FontWeight="Bold" 
            FontSize="16" 
            />

        <Button x:Name="BtOcho" Content="8" HorizontalAlignment="Left" Height="49" Margin="89,99,0,0" VerticalAlignment="Top" Width="49"  Foreground="White" FontWeight="Bold" FontSize="16" />
        <Button x:Name="BtNueve" Content="9" HorizontalAlignment="Left" Height="49" Margin="150,99,0,0" VerticalAlignment="Top" Width="49" Foreground="White" FontWeight="Bold" FontSize="16" />
        <Button x:Name="BtBorrar" Content="C/CE" HorizontalAlignment="Left" Height="49" Margin="212,99,0,0" VerticalAlignment="Top" Width="49" Foreground="White" FontWeight="Bold" FontSize="16"  Background="DarkOrange" />
        <Button x:Name="BtCuatro" Content="4" HorizontalAlignment="Left" Height="49" Margin="29,163,0,0" VerticalAlignment="Top" Width="49" Foreground="White" FontWeight="Bold" FontSize="16" />
        <Button x:Name="BtCinco" Content="5" HorizontalAlignment="Left" Height="49" Margin="89,163,0,0" VerticalAlignment="Top" Width="49" Foreground="White" FontWeight="Bold" FontSize="16" />
        <Button x:Name="BtSeis" Content="6" HorizontalAlignment="Left" Height="49" Margin="150,163,0,0" VerticalAlignment="Top" Width="49" Foreground="White" FontWeight="Bold" FontSize="16" />
        <Button x:Name="BtSuma" Content="+" HorizontalAlignment="Left" Height="49" Margin="212,163,0,0" VerticalAlignment="Top" Width="49" Foreground="White" FontWeight="Bold" FontSize="16" Background="DarkOrange" />
        <Button x:Name="BtUno" Content="1" HorizontalAlignment="Left" Height="49" Margin="29,226,0,0" VerticalAlignment="Top" Width="49" Foreground="White" FontWeight="Bold" FontSize="16" />
        <Button x:Name="BtDos" Content="2" HorizontalAlignment="Left" Height="49" Margin="89,226,0,0" VerticalAlignment="Top" Width="49"  Foreground="White" FontWeight="Bold" FontSize="16" />
        <Button x:Name="BtTres" Content="3" HorizontalAlignment="Left" Height="49" Margin="150,226,0,0" VerticalAlignment="Top" Width="49" Foreground="White" FontWeight="Bold" FontSize="16" />
        <Button x:Name="BtResta" Content="-" HorizontalAlignment="Left" Height="49" Margin="212,226,0,0" VerticalAlignment="Top" Width="49" Foreground="White" FontWeight="Bold" FontSize="16" Background="DarkOrange" />
        <Button x:Name="BtCero" Content="0" HorizontalAlignment="Left" Height="49" Margin="29,290,0,0" VerticalAlignment="Top" Width="49" Foreground="White" FontWeight="Bold" FontSize="16" />
        <Button x:Name="BtIgual" Content="=" HorizontalAlignment="Left" Height="49" Margin="210,291,0,0" VerticalAlignment="Top" Width="49" Foreground="White" FontWeight="Bold" FontSize="16" Background="DarkOrange" />
        <Button x:Name="BtMulti" Content="*" HorizontalAlignment="Left" Height="49" Margin="150,290,0,0" VerticalAlignment="Top" Width="49" Foreground="White" FontWeight="Bold" FontSize="16" Background="DarkOrange" />
        <Button x:Name="BtDiv" Content="/" HorizontalAlignment="Left" Height="49" Margin="88,292,0,0" VerticalAlignment="Top" Width="49"  Foreground="White" FontWeight="Bold" FontSize="16" Background="DarkOrange" />
        <TextBox x:Name="Screen" HorizontalAlignment="Left" Height="49" Margin="27,23,0,0"  TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="234" Foreground="White" TextAlignment="Right" FontSize="18"  Background="Black" IsEnabled="False" BorderBrush="#FFFFF8F8">

        </TextBox>


    </Grid>
</Window>
